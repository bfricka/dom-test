block content

  .container.test-header
    h1 DOM Test
    .row
      .form-inline.test-form
        label(for='clone-type') Clone type:
        select#test-type
          option(value='clone') clone + appendChild
          option(value='cloneFrag') clone w/ doc fragment + appendChild
          option(value='strConcat') string concat + innerHTML
          option(value='strJoin') array join + innerHTML

        label(for='runs') Number of Runs
        input#runs(type='text', value='500')

        button#go.btn.btn-primary Go

